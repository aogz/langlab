{
  "manifest_version": 3,
  "name": "LangLab Selector & Translator",
  "version": "0.1.0",
  "description": "Select words on any page, highlight like LangLab, and translate client-side.",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "action": {
    "default_title": "LangLab Selector & Translator",
    "default_popup": "popup.html",
    "default_badge": {
      "text": "0",
      "color": "#2563eb"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "setup.html",
    "open_in_tab": true
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["page-prompt.js", "setup.html", "utils.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}


